{
  "name": "prowl",
  "version": "1.3.0",
  "description": "A cat that watches your background jobs from the macOS menubar",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "author": "BangDori",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:main\" \"pnpm dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "pnpm build:main && pnpm build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "pnpm build && electron-builder",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "lucide-react": "^0.563.0",
    "menubar": "^9.4.0",
    "plist": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.bangdori.prowl",
    "productName": "Prowl",
    "asar": true,
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}
